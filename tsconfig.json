{
  "compilerOptions": {
    // "module": "ESNext",
    "target": "ES2022",
    "module": "CommonJS",

    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",

    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },

    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictFunctionTypes": true
  },
  "include": ["src"]
}
